@using LmsAbp.Teachers
@model CreateUpdateTeacherDto

<form method="post" action="/Teacher/Create">
    @Html.AntiForgeryToken()

    <div class="form-group mt-2">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>National ID</label>
        <input asp-for="NationalId" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Specialization</label>
        <input asp-for="Specialization" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Years of Experience</label>
        <input asp-for="YearsOfExperience" type="number" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Hire Date</label>
        <input asp-for="HireDate" type="date" class="form-control" />
    </div>

    <div class="form-check mt-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Active</label>
    </div>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
