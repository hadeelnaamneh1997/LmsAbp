@using LmsAbp.Students
@model CreateUpdateStudentDto

<form asp-controller="Student"
      asp-action="Edit"
      asp-route-id="@ViewBag.StudentId"
      method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mt-2">
        <label>National Number</label>
        <input asp-for="NationalNumber" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Gender</label>
        <input asp-for="Gender" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Address</label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>

    <div class="form-group mt-2">
        <label>Enrollment Date</label>
        <input asp-for="EnrollmentDate" type="date" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>GPA</label>
        <input asp-for="GPA" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-check mt-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Active</label>
    </div>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-warning">
            Update
        </button>
    </div>
</form>
