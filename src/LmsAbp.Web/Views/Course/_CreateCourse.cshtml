@using LmsAbp.Courses
@model CreateUpdateCourseDto

<form method="post" action="/Course/Create">
    @Html.AntiForgeryToken()

    <div class="form-group mt-2">
        <label>Course Code</label>
        <input asp-for="CourseCode" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Course Name</label>
        <input asp-for="CourseName" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mt-2">
        <label>Credit Hours</label>
        <input asp-for="CreditHours" type="number" class="form-control" />
    </div>

    <div class="form-check mt-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="form-check-label">Active</label>
    </div>

    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
